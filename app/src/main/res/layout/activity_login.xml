<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/city_road_wallpaper"
        tools:context=".Login">
    <ImageView
            android:layout_width="374dp"
            android:layout_height="675dp" app:srcCompat="@mipmap/container_blur_city_road"
            android:id="@+id/loginContainer" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/LogEmailText"
            android:hint="ელფოსტა"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textColorHint="#848484"
            android:textColorLink="@color/common_google_signin_btn_text_dark_default" android:shadowColor="#848484"
            android:layout_marginTop="230dp" app:layout_constraintTop_toTopOf="@+id/loginContainer"
            android:visibility="invisible"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/regEmailText"
            android:hint="ელფოსტა"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textColorHint="#848484"
            android:textColorLink="@color/common_google_signin_btn_text_dark_default" android:shadowColor="#848484"
            android:visibility="visible" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/regNameText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/regNameText"
            android:hint="სახელი"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textColorHint="#848484"
            android:textColorLink="@color/common_google_signin_btn_text_dark_default" android:shadowColor="#848484"
            android:layout_marginTop="240dp" app:layout_constraintTop_toTopOf="@+id/loginContainer"
            android:visibility="visible"
            android:inputType="text"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/LogPasswordText"
            android:hint="პაროლი" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/LogEmailText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textColorHint="#848484" android:shadowColor="@color/common_google_signin_btn_text_dark_default"
            android:visibility="invisible"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/regPasswordText"
            android:hint="პაროლი" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/regEmailText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textColorHint="#848484" android:shadowColor="@color/common_google_signin_btn_text_dark_default"
            android:visibility="visible"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/regConfirmPasswordText"
            android:hint="გაიმეორეთ პაროლი"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textColorHint="#848484" android:shadowColor="@color/common_google_signin_btn_text_dark_default"
            android:visibility="visible" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/regPasswordText"/>
    <Button
            android:text="შესვლა"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/loginButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed" android:layout_marginBottom="96dp"
            app:layout_constraintBottom_toBottomOf="@+id/loginContainer"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:visibility="visible" android:textSize="13sp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <Button
            android:text="მზადაა"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/regButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed" android:layout_marginBottom="95dp"
            app:layout_constraintBottom_toBottomOf="@+id/loginContainer"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:textSize="12sp" android:visibility="invisible"/>
    <TextView
            android:text="შესვლა"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginSectorButton" android:textSize="16sp"
            android:textStyle="bold" android:textColor="@color/common_google_signin_btn_text_dark_default"
            app:layout_constraintStart_toStartOf="@+id/loginContainer"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/registerSectorButton"
            app:layout_constraintTop_toTopOf="@+id/loginContainer"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginTop="110dp"/>
    <TextView
            android:text="გაწევრიანება"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerSectorButton" android:textSize="16sp"
            android:textColor="#BDBDBD"
            app:layout_constraintStart_toEndOf="@+id/loginSectorButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/loginContainer"
            app:layout_constraintTop_toTopOf="@+id/loginSectorButton"
            app:layout_constraintBottom_toBottomOf="@+id/loginSectorButton" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="101dp" app:srcCompat="@mipmap/profile_icon"
            android:id="@+id/regProfilePic"
            app:layout_constraintTop_toBottomOf="@+id/registerSectorButton"
            android:onClick="addProfilePic"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="88dp" android:layout_height="101dp"
            app:layout_constraintBottom_toBottomOf="@+id/regProfilePic"
            app:layout_constraintTop_toTopOf="@+id/regProfilePic"
            app:layout_constraintEnd_toEndOf="@+id/regProfilePic"
            app:layout_constraintStart_toStartOf="@+id/regProfilePic"
            android:id="@+id/circle_profile_picture" android:visibility="invisible"/>


</android.support.constraint.ConstraintLayout>